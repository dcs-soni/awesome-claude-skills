import { Request, Response, NextFunction } from 'express';
import { {{PascalCase}}Service } from '../services/{{kebab-case}}.service';
import { AppError } from '../utils/errors';

export class {{PascalCase}}Controller {
  private service: {{PascalCase}}Service;

  constructor() {
    this.service = new {{PascalCase}}Service();
  }

  list = async (req: Request, res: Response, next: NextFunction) => {
    try {
      const { page = 1, limit = 20 } = req.query;
      const result = await this.service.list({
        offset: (Number(page) - 1) * Number(limit),
        limit: Number(limit),
      });
      res.json(result);
    } catch (error) {
      next(error);
    }
  };

  getById = async (req: Request, res: Response, next: NextFunction) => {
    try {
      const item = await this.service.getById(req.params.id);
      if (!item) throw new AppError(404, '{{PascalCase}} not found');
      res.json(item);
    } catch (error) {
      next(error);
    }
  };

  create = async (req: Request, res: Response, next: NextFunction) => {
    try {
      const item = await this.service.create(req.body);
      res.status(201).json(item);
    } catch (error) {
      next(error);
    }
  };

  update = async (req: Request, res: Response, next: NextFunction) => {
    try {
      const item = await this.service.update(req.params.id, req.body);
      if (!item) throw new AppError(404, '{{PascalCase}} not found');
      res.json(item);
    } catch (error) {
      next(error);
    }
  };

  delete = async (req: Request, res: Response, next: NextFunction) => {
    try {
      await this.service.delete(req.params.id);
      res.status(204).send();
    } catch (error) {
      next(error);
    }
  };
}
